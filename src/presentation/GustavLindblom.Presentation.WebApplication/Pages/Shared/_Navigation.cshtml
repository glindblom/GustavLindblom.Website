@using GustavLindblom.Application.Navigation.Models
@using GustavLindblom.Application.Navigation.Services
@inject INavigationService NavigationService;

@{
    NavigationViewModel navigationViewModel = await NavigationService.GetNavigation();
}



@if (navigationViewModel != null)
{
    <div class="header">
        <h1 class="brand-title">@navigationViewModel.Heading</h1>
        <h2 class="brand-tagline">@navigationViewModel.Tagline</h2>

        <nav class="nav">
            <ul class="nav-list">

                @foreach (var navigable in navigationViewModel.Navigables)
                {
                    <li class="nav-item">
                        <a class="pure-button" href="@navigable.Page">@navigable.DisplayText</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
}